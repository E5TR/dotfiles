secondary = #ffb86c
alert = #ff5555

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
;`radius = 6.0
;fixed-center = false

